<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.tomale.id.projects.management.category.views"
            name="Projects">
      </category>
      <view
            allowMultiple="false"
            category="org.tomale.id.projects.management.category.views"
            class="org.tomale.id.projects.management.views.ProjectBrowser"
            id="org.tomale.id.projects.management.views.projectbrowser"
            name="Project Browser"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.tomale.id.projects.management.editors.ProjectEditor"
            default="false"
            id="org.tomale.id.projects.management.editors.projects"
            name="Project Editor">
      </editor>
   </extension>

</plugin>
